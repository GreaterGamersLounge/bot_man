<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group-wrapper">
    <h2 class="form-group-heading">Basic Information</h2>
    <div class="form-group">
      <div class="col-sm-9">
        <%= form.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </div>
      <div class="col-sm-9">
        <%= form.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
